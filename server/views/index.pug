doctype html
html(lang="en")
  head
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
    title= title

    link(rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous")

  body
    main#cardoVue(role="main" class="container")
      center 
         h1#pageTitle List of Products
      section
        a(class='btn btn-primary float-right' v-bind:href="addProduct") Add Product
        table.table#productsLista
          tr
            th Product Name
            th Quantity
            th Price
            th Actions
          tr(v-for='datat in datas')
            td {{ datat.productName }}  
            td {{ datat.quantity }}
            td {{ datat.price }}
            td  
              button(v-on:click="deleteNote(datat)" class="btn btn-danger") Delete 
              button(v-on:click.once.prevent = "editProduct(datat)" class="btn btn-primary" type="button") Edit                          
            
            div(class="container-fluid")  
                table.table#productsList    
                  tr
                    th(scope="col-md-4") 
                    th(scope="col-md-4") 
                    th(scope="col-md-4")   
                  tr(v-for="item in items")
                    td 
                      label(for="pn") Product Name
                        input(type="text" v-model="item.productName" class="form-control" id="pn")
                      label(for="qty") Quantity
                        input(type="number" v-model="item.quantity" class="form-control" id="qty")
                      label(for="price") Price
                        input(type="number" v-model="item.price" class="form-control" id="price") 
                      button(class="btn btn-primary" v-on:click.prevent="updateItem(item)" type="button" ) Update
          
    script(src="/axios.min.js")
    script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js")
    script(src="https://cdn.jsdelivr.net/npm/vue/dist/vue.js")
    script(src="/cardo-vue.js")
